{
    "env": {
        "browser": false,
        "node": true,
        "es6": true,
        "jest": false,
        "jquery": false
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "binaryLiterals": true,
            "blockBindings": true,
            "classes": true,
            "defaultParams": true,
            "destructuring": true,
            "forOf": true,
            "generators": true,
            "modules": true,
            "objectLiteralComputedProperties": true,
            "objectLiteralDuplicateProperties": true,
            "objectLiteralShorthandMethods": true,
            "objectLiteralShorthandProperties": true,
            "octalLiterals": true,
            "regexUFlag": true,
            "regexYFlag": true,
            "spread": true,
            "superInFunctions": true,
            "templateStrings": true,
            "unicodeCodePointEscapes": true,
            "globalReturn": true
        }
    },
    "rules": {
        "strict": "warn",
        "semi": "warn",
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": false
            }
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-global-assign": "warn",
        "no-console": "error",
        "comma-dangle": "warn",
        "no-trailing-spaces": "warn"
    }
}