{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Master (no build)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/index.ts",
            "args": [
                "--async-stack-traces",
                "--enable-source-maps"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--config",
                "${workspaceFolder}/mocharc.json"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Master",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/index.ts",
            "preLaunchTask": "yarn: build",
            "args": [
                "--async-stack-traces",
                "--enable-source-maps"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Cluster (no build)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/src/workers/cluster/index.ts",
            "args": [
                "--async-stack-traces",
                "--max-old-space-size=4096",
                "--enable-source-maps"
            ],
            "env": {
                "CLUSTER_ID": "0",
                "SHARDS_MAX": "1",
                "SHARDS_FIRST": "0",
                "SHARDS_LAST": "0"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Cluster",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/src/workers/cluster/index.ts",
            "preLaunchTask": "yarn: build",
            "args": [
                "--async-stack-traces",
                "--max-old-space-size=4096",
                "--enable-source-maps"
            ],
            "env": {
                "CLUSTER_ID": "0",
                "SHARDS_MAX": "1",
                "SHARDS_FIRST": "0",
                "SHARDS_LAST": "0"
            }
        },
        {
            "name": "Debug current file",
            "type": "node",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "args": [
                "--async-stack-traces",
                "--enable-source-maps"
            ]
        }
    ]
}