{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Master (no build)",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/index.ts"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test all",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--config",
                "${workspaceFolder}/mocharc.json",
                "--recursive"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test current file",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--config",
                "${workspaceFolder}/mocharc.json",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "TS_NODE_FILES": "true"
            },
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch master",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/index.ts",
            "preLaunchTask": "yarn: build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch cluster (no build)",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/workers/cluster/index.ts",
            "args": [
                "--max-old-space-size=4096"
            ],
            "env": {
                "CLUSTER_ID": "0",
                "SHARDS_MAX": "1",
                "SHARDS_FIRST": "0",
                "SHARDS_LAST": "0"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch cluster",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/workers/cluster/index.ts",
            "preLaunchTask": "yarn: build",
            "args": [
                "--max-old-space-size=4096"
            ],
            "env": {
                "CLUSTER_ID": "0",
                "SHARDS_MAX": "1",
                "SHARDS_FIRST": "0",
                "SHARDS_LAST": "0"
            }
        },
        {
            "name": "Debug current file",
            "type": "node",
            "console": "integratedTerminal",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "autoAttachChildProcesses": true
        }
    ]
}